{
  "variables": {
    "base_image": "ubuntu:precise",
    "output_repository": "omnibus/ubuntu",
    "output_tag": "precise"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `base_image` }}",
      "commit": true,
      "pull": false
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "apt-get update && apt-get install -y tar curl bash fakeroot sudo"
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["berks-cookbooks"],
      "run_list": [ "recipe[omnibus-custom]" ],
      "prevent_sudo": true
    },
    {
      "type": "shell",
      "inline": "apt-get clean"
    }
  ],
  "post-processors": [
      [
          {
              "type": "docker-dockerfile",
              "user": "omnibus",
              "entrypoint": ["/bin/bash", "-l", "-c", "omnibus-autobuild"]
          },
          {
              "type": "docker-tag",
              "repository": "{{ user `output_repository` }}",
              "tag": "{{ user `output_tag` }}"
          }
      ]
  ]
}
